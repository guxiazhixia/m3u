{
  "name": "52龙禁漫",
  "version": "1",
  "script": "@rule:js",
  "host": "https://52longjm.com",
  "searchUrl": "https://52longjm.com/cata.php?key={key}&page={page}",
  "headers": {
    "User-Agent": "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36"
  },
  "home": {
    "@rule": "//div[@class='module-main scroll-box']",
    "list": ".//div[@class='module-items module-poster-items-base']/a[@class='module-poster-item module-item']",
    "name": ".//div[@class='module-poster-item-title']/text()",
    "url": "@href",
    "urlJoin": true,
    "cover": ".//img/@data-original"
  },
  "search": {
    "list": "//a[@class='module-poster-item module-item']",
    "name": ".//div[@class='module-poster-item-title']/text()",
    "url": "@href",
    "urlJoin": true,
    "cover": ".//img/@data-original"
  },
  "detail": {
    "cover": "//div[@class='module-item-pic']/img/@data-original",
    "description": "//div[@class='module-info-introduction-content show-desc']/p/text()",
    "author": "//div[.//span[text()='作者：']]//a/text()",
    "update": "normalize-space(//div[.//span[text()='更新：']]//div[@class='module-info-item-content'])",
    "chapterList": "//div[@class='module-play-list-content module-play-list-base']/a[@class='module-play-list-link']",
    "chapterName": "./span/text()",
    "chapterUrl": "@href",
    "urlJoin": true,
    "order": "desc"
  },
  "content": {
    "imageUrl": "//img[@class='lazy']/@data-original",
    "proxy": true,
    "lazyLoad": {
      "trigger": "scroll",
      "replaceSrc": "data-original"
    }
  }
}